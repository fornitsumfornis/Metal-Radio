#/bin/bash
echo "This will also install mplayer, python3.5, pip3 and coloroma"
echo "Would you like to proceed? [y/n]" 
read choice
if ["($choice)" =  'y']; then
	sudo apt-get install mplayer -y python3.5 -y python-pip3 -y 
	pip install colorama
	echo "lirc=no\n" >>~.mplayer/config
	echo "prefer-ipv4=yes\n" >>~.mplayer/config
	chmod 755 ~/Terminal-Metal-master/metal.py
	sudo mv ~/Terminal-Metal-master/metal.py /usr/local/bin
	sudo mv ~Terminal-Metal-master/terminal-metal.svg/usr/share/pixmaps
	sudo mv metal.desktop /usr/share/applications
	mv metal.desktop ~/Desktop
fi
	echo "Exiting the program...."
	exit 1
 
